<%- include("../includes/head.ejs"); %>
<body >
    <%- include("../includes/body.ejs"); %>
    <script src="/js/moment/moment.js"></script>
    <%- include("../includes/momentf.ejs"); %>
    <%- include("../includes/navigation.ejs"); %>
    
<br>
    <div class="container">
            <div class="row" >
                
                <div class="col-md-6 offset-md-3 col-sm-12">
                    <h2 class="text-muted text-left"> Acceuil</h2>
                  <div class="p-3 mb-2 bg-white border ">
                    
                        <form class="md-form" style="margin-top: 10px;" action="/upload" method="POST" enctype="multipart/form-data">
                                <div class="form-group" >
                                  
                                                <label for="ControlTextarea">commentaire</label>
                                        <textarea class="form-control bg-transparent border border-0" id="ControlTextarea" name="description" rows="2" placeholder="Ecrivez votre commentaire"></textarea>
                                      </div>
                                      
                                          <div class="form-group" >
                                                       <input type="hidden" name="_csrf" value="<%= csrfToken%>"> 
                                                  <input type="file" name="file" class="form-control-file"  id="inputFile">
                                                </div>
                                                        <button type="submit" class="btn btn-outline-success"><i class="fas fa-upload"></i></button>
                                                
                                              
                                          </form>
                                          
                                          <% if(message){ %>
                                            <br>
                                            <p class="alert alert-danger text-muted"><%= message %></p>
                                            <% }%>
                                        </div>
                                        

                                        <% if (posts.length > 0) { %>
                                          <% for (let post of posts){%>
                                            <% if(post.type === "application/pdf"){%>
                                              <div class="p-3 mb-2 bg-white border" id="post">
                                                <h3 class="text-left" style="color: #0087bd;"><i class="far fa-user-circle" style="color: black;"></i> <%= post.creator.username%></h3>
                                                <div class="row">
                                                <div class="col-md-2">
                                                    <img src="https://assets.jimstatic.com/s/img/cc/icons/pdf.png" alt="">
                                                </div>
                                                <div class="col-md-10">
                                                <p><%= post.comment%></p>
                                                
                                            <p><script>document.write( renderDate(Number('<%= post.createdAt%>')));</script></p>
                                            <div class="btn-group" role="group" aria-label="Basic example">
                                                <a class="btn btn-primary" href="<%= post.filename%>" target="_blank"><i class="fas fa-eye"> </i> Lire</a>
                                                <a class="btn btn-primary" href="<%= post.filename%>" download><i class="fas fa-upload"></i> Telecharger</a>
                                              </div>
                                              </div>
                                            </div>
                                            
                                            
                                            
                                          </div>  
                                              <%}else{%>
                                              <div class="p-3 mb-2 bg-white border" id="post">
                                                <h3 class="text-left" style="color: #0087bd;"><i class="far fa-user-circle" style="color: black;"></i> <%= post.creator.username%></h3>
                                                
                                                <p class="text-left"><%= post.comment%></p>
                                            <img src="<%= post.filename%>" class="rounded mx-auto d-block" alt="..." style="width: 100%;
                                            ">
                                            <br>
                                            <p><script>document.write( renderDate(Number('<%= post.createdAt%>')));</script></p>
                                            <div class="btn-group" role="group" aria-label="Basic example">
                                                      <a class="btn btn-warning" href="<%= post.filename%>" role="button" download><i class="fas fa-upload"></i></a>
                                                     
                                                      
                                                    </div>
                                          </div>

                                          <%}}%>
                                          <%}else{%>
                                            <div class="alert alert-dark text-center" role="alert">
                                                there is no posts in your school
                                              </div>
                                            <%}%>
                                          
                                        
                                             

                                              
                    </div>
                    
                    </div>
                    </div>
                
                
                
                    <%- include("../includes/footer.ejs");%>
                  
            
</body>
<%- include("../includes/script.ejs");%> 
</html>