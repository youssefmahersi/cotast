<%- include("../includes/head.ejs"); %>
<body>
   
        <%- include("../includes/body.ejs"); %>
        <style>
                #messages{height:350px; overflow:auto;}
                #status{height:100px; overflow:auto;}
                
            </style>
    <%- include("../includes/navigation.ejs"); %>
    <br>

    <div class="container">
        <div class="row" >
            <div class="col-md-6 offset-md-3 col-sm-12">
                <div class="text-center">

                
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                      Créer un groupe
                      </button>
                        </div>
                        <br>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLongTitle">Créer un groupe</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                    
                                    
                                        <div class="form-group">
                                            <label for="roomName">Nom de groupe</label>
                                            <input type="text" class="form-control" id="roomName" name="roomName">
                                        </div>
                                        <div class="form-group">
                                                <label for="roomPassword">mot de passe de groupe</label>
                                                <input type="password" class="form-control" id="roomPassword" name="roomPassword">
                                            </div>
                                            <button type="click" class="btn btn-primary" onclick="createRoom(this,'<%= csrfToken %>')"><i class="fas fa-plus"></i> Romm</button>
                                    
                                </div>
                               
                              </div>
                            </div>
                          </div>
                         
                
   
                <div class="p-3 mb-2 ">
                    <h1 class="text-center">Chat</h1>
                    <div class="card" id="card">
                    <div id="messages" class="card-block bg-light">    
                        
                      <p class="text-danger text-center" style="margin: 4px;">Entrer un groupe</p>

                                
                        </div>
                    </div>
                        <br>
                        <div class="input-group mb-3 border border-secondary rounded">
                                <input type="text" class="form-control" placeholder="Ecrivez votre message" aria-label="Recipient's username" name="message" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                  <button class="btn btn-outline-primary" type="button" onclick="sendMessage(this)"><i class="fas fa-paper-plane"></i></button>
                                </div>
                              </div>
                    
                </div>
                <div class="p-3 mb-2 ">
                    <div class="card" id="card">
                    <div class="card-block bg-light" id="status">
    
                    </div>
                      
                      </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../includes/footer.ejs");%>
</body>

<%- include("../includes/script.ejs");%> 
<script src="/js/createRoom.js"></script>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
</html>