<%- include("includes/head.ejs"); %>
<body>
        <%- include("includes/body.ejs"); %>
  <%-include("includes/navigation2.ejs"); %>
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet"> 
  <link href="https://fonts.googleapis.com/css?family=Montserrat:300i,400,500i&display=swap" rel="stylesheet">
      <% if (message) { %>
        
        <div class="col-md-6 offset-md-3 col-sm-12" style="margin: 7px auto;">
            <div class="text-danger text-center" ><%= message %></div>
        </div>
        
    <% } %>
    <div class="container">
        <div class="row">
          <div class="col-md-6">
              <div class="" style="padding: 10px;">
                <h2 class="text-center" style="font-family: 'Montserrat', sans-serif; font-weight: bold;">Connecter ensemble</h2>
                <br>
               <h4 class="text-muted text-center" style="font-family: 'Montserrat', sans-serif;font-weight: bold; margin:8px;"><i class="fab fa-connectdevelop "></i> Connecter ensemble</h4>
               <br>
               <h4 class="text-muted text-center" style="font-family: 'Montserrat', sans-serif;font-weight: bold; margin:8px;"><i class="fas fa-comment-dots"></i> Chat </h4>
               <br>
               <h4 class="text-muted text-center" style="font-family: 'Montserrat', sans-serif; font-weight: bold; margin:8px;"><i class="fas fa-share-alt"></i> 
                partagez votre travail </h4>
               <br>
               <h4 class="text-muted text-center" style="font-family: 'Montserrat', sans-serif; font-weight: bold; margin:8px;"><i class="fas fa-cloud"></i> Enregistrez votre travail  <span>chez cotast</span> </h4>
                </div>
          </div>
                <!-- col-md-4 -->
                <div class="col-md-6">
                        <h2 class="text-left " style="font-family: 'Montserrat', sans-serif; font-weight: bold; padding: 5px; margin:4px;">S'inscrire</h2>
                      <div class="">
                        
                  
                    <div class="form-group">
                      
                      <input type="text" class="form-control" id="Inputusername" name = "username" aria-describedby="emailHelp" value="" placeholder="Saisissez votre nom d'utilisateur">          
                    </div>
                    <div class="form-group">
                      
                      <input type="email" class="form-control" id="InputEmail" name="emails"  placeholder="Saisissez votre email">          
                    </div>
                    <div class="form-group">
                      
              <select class="form-control" id="InputSchool" name = "school">
                  <option value="">Lycée</option>
                      <option value="Bardo">Bardo</option>
                      <option value="Rue de russie">Rue de russie</option>
                    </select>
                  </div>
                    
                    <div class="form-group">
                            
                    <select class="form-control" id="InputSelect" name = "status">
                      <option value="">Inscrivez-vous en tant que </option>
                            <option value="Teacher">Enseignant</option>
                            <option value="Student">Elève</option>
                          </select>
                        </div>
                        <div class="input-group" >
                          <input type="password" class="form-control pwd" name = "passwords" id="InputPassword" placeholder="Saisir votre mot de passe">
                          <span class="input-group-btn">
                            <button class="btn btn-default  reveal" type="button"><i class="fas fa-eye"></i></button>
                          </span> 
                        </div>
                       <br>
                       <div class="input-group" >
                        <input type="password" class="form-control pwd2" name = "passwordconfirm" id="InputConfirmPassword" placeholder="Confirmez votre mot de passe">
                        <span class="input-group-btn">
                          <button class="btn btn-default reveal2" type="button"><i class="fas fa-eye"></i></button>
                        </span> 
                      </div>
            
                      <br>
                      <button type="button" class="btn btn-primary" onclick="signup(this,'<%= csrfToken %>')" style="display: block; margin:0 auto; padding: 10px;">
                        S'inscrire</button>
                 
                </div>
               
                </div>
        </div>

    </div>
    <%- include("includes/footer.ejs");%>
       
</body>
<%- include("includes/script.ejs");%>
<script>
$(".reveal").on('click',function() {
    var $pwd = $(".pwd");
    if ($pwd.attr('type') === 'password') {
        $pwd.attr('type', 'text');
    } else {
        $pwd.attr('type', 'password');
    }
});

$(".reveal2").on('click',function() {
    var $pwd = $(".pwd2");
    if ($pwd.attr('type') === 'password') {
        $pwd.attr('type', 'text');
    } else {
        $pwd.attr('type', 'password');
    }
});
</script>
<script src="/js/signup.js"></script>

<script src="/js/login.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
</html>
